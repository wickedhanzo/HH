@using HouseHoldApp.MVC.Infrastructure

@{
    ViewBag.Title = "Index";
}

@if (((ICurrentUser)ViewBag.CurrentUser).IsAuthenticated
    && ((ICurrentUser)ViewBag.CurrentUser).HasHouseHold == false)
{
    <div class="jumbotron">
        <div class="container">
            <h1>Thanks for registering to HouseHoldApp</h1>
            <p>You can now create your own household or join an existing one</p>
            <!-- <p><a class="btn btn-primary btn-lg" role="button">Learn more &raquo;</a></p>-->
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Create HouseHold</h2>
                <p>Create your household here</p>
                <p><a class="btn btn-default" href="~/HouseHold/Create" role="button">Create HouseHold &raquo;</a></p>
            </div>
            <div class="col-md-6">
                <h2>Search HouseHold</h2>
                <p>Your household already exists? Search it here and join it</p>
                <p><a class="btn btn-default" href="~/HouseHold/Search" role="button">Search HouseHold &raquo;</a></p>
            </div>
        </div>
    </div>
}
else if (((ICurrentUser)ViewBag.CurrentUser).IsAuthenticated
         && ((ICurrentUser)ViewBag.CurrentUser).HasHouseHold)
{
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome back to HouseHoldApp</h1>
            <p>We hope you're enjoying your stay</p>
            <!-- <p><a class="btn btn-primary btn-lg" role="button">Learn more &raquo;</a></p>-->
        </div>
    </div>
}
else
{
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome to HouseHoldApp</h1>
            <p>Register now and create your household or join an existing HouseHold</p>
            <!-- <p><a class="btn btn-primary btn-lg" role="button">Learn more &raquo;</a></p>-->
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Register</h2>
                <p>New here? Register now to get started with your online household!</p>
                <p><a class="btn btn-default" href="~/Account/Register" role="button">Register &raquo;</a></p>
            </div>
            <div class="col-md-6">
                <h2>Login</h2>
                <p>Already a member? Log in here</p>
                <p><a class="btn btn-default" href="~/Account/Login" role="button">Login &raquo;</a></p>
            </div>
        </div>
    </div>
}